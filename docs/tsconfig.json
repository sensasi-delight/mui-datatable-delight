{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@src": ["./../src"],
            "@dist": [".."],
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
