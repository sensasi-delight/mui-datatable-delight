{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "jsx": "preserve",

        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@src": ["./../src"],
            "@/*": ["/*"]
        }
    },
    "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"]
}
