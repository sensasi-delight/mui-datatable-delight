{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "allowJs": true,
        "incremental": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "plugins": [
            {
                "name": "next"
            }
        ],
        "rootDir": "../",
        "paths": {
            "@src": ["../src"],
            "@src/*": ["../src/*"],
            "@dist": [".."],
            "@dist/*": ["../dist/*"],
            "@/*": ["./*"]
        }
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "../src"
    ],
    "exclude": ["node_modules"]
}
